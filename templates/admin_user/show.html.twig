{% extends 'base.html.twig' %}

{% block title %}Utilisateur
{% endblock %}

{% block body %}
	<h1>Utilisateur
		{{user.prenom}}</h1>

	<div class="card mt-4">
		<div class="card-body">
			<table class="table table-bordered">
				<tbody>
					<tr>
						<th>Nom</th>
						<td>{{ user.nom }}</td>
					</tr>
					<tr>
						<th>Prénom</th>
						<td>{{ user.prenom }}</td>
					</tr>
					<tr>
						<th>Email</th>
						<td>{{ user.email }}</td>
					</tr>
					<tr>
						<th>Rôles</th>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
					</tr>
					<tr>
						<th>Vérifié</th>
						<td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
					</tr>
				</tbody>
			</table>
			<a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-success">Modifier</a>
		</div>
	</div>

	<a href="{{ path('app_admin_user_index') }}" class="btn btn-primary my-3">Retour à la liste</a>

	{{ include('admin_user/_delete_form.html.twig') }}
{% endblock %}
