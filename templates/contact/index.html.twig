{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="container mt-5">
       <h1 class="mb-4 row justify-content-center">Page de Contact</h1>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <form class="custom-form" method="POST">
                    {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.email, 'Adresse e-mail') }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre adresse e-mail'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.subject, 'Sujet') }}
                        {{ form_widget(form.subject, {'attr': {'class': 'form-control', 'placeholder': 'Sujet de votre message'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.content, 'Message') }}
                        {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': '5', 'placeholder': 'Votre message'}}) }}
                    </div>
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                    {{ form_end(form) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
