{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="reset-password">
        <h1 class="reset-title">Réinitialiser votre mot de passe</h1>

        {{ form_start(resetForm) }}
            <div class="form-group">
                {{ form_row(resetForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
            </div>
            <button class="btn btn-primary reset-btn">Réinitialiser le mot de passe</button>
        {{ form_end(resetForm) }}
    </div>
{% endblock %}
