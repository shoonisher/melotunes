{% extends 'base.html.twig' %}

{% block title %}Détails du produit{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4">Détails du Produit</h1>

		<div class="card mt-4">
			<div class="card-body">
				<table class="table table-bordered">
					<tbody>
						<tr>
							<th>Nom</th>
							<td>{{ product.name }}</td>
						</tr>
						<tr>
							<th>Prix</th>
							<td>{{ product.price ~ ' €' }}</td>
						</tr>
						<tr>
							<th>Image</th>
							<td>
								{% if product.picture %}
									<img src="{{ asset('uploads/images/products/' ~ product.picture) }}" alt="Image du produit" style="max-width: 100px;">
								{% else %}
									Pas d'image
								{% endif %}
							</td>
						</tr>
						<tr>
							<th>Description</th>
							<td>{{ product.description }}</td>
						</tr>
						<tr>
							<th>Catégorie</th>
							<td>{{ product.category }}</td>
						</tr>
					</tbody>
				</table>
				<a href="{{ path('app_admin_product_edit', {'id': product.id}) }}" class="btn btn-success">Modifier</a>
			</div>
		</div>
		<a href="{{ path('app_admin_product_index') }}" class="btn btn-primary my-3">Retour à la liste</a>

		{{ include('admin_product/_delete_form.html.twig') }}
	</div>
{% endblock %}
