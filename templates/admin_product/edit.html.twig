{% extends 'base.html.twig' %}

{% block title %}Modifier le produit
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4 text-dark">
			Modifier le Produit
		</h1>

		<div class="card mt-4">
			<div class="card-body">
				{{ form_start(form) }}

				<div class="form-group">
					{{ form_label(form.name, 'Nom :') }}
					{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.price, 'Prix :') }}
					{{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.picture, 'Image :') }}
					{{ form_widget(form.picture, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.description, 'Description :') }}
					{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
				</div>

				<div class="form-group">
					{{ form_label(form.category, 'Catégorie :') }}
					{{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
				</div>

				<div class="mt-3">
					<button type="submit" class="btn btn-success">Mettre à jour</button>
				</div>

				{{ form_end(form) }}
			</div>
		</div>

		<a href="{{ path('app_admin_product_index') }}" class="btn btn-primary mt-3 ">
			Retour à la liste
		</a>

		<div class="mt-3">
			{{ include('admin_product/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
