{% extends 'base.html.twig' %}

{% block title %}
	Liste des commentaires
{% endblock %}

{% block body %}
	<div class="comment-index-container">
		<h1 class="comment-index-title">Liste des commentaires</h1>

		<a class="btn btn-success my-3" href="{{ path('app_admin_comment_new') }}">Créer un nouveau commentaire</a>
		<table class="table table-striped">

			<thead>
				<tr>
					<th>Contenu</th>
					<th>Son</th>
                    <th>Artiste</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for comment in comments %}
					<tr>
						<td>{{ comment.content }}</td>
						<td>{{comment.son}}</td>
                        <td>{{comment.product}}</td>
						<td>
							<a class="btn btn-primary btn-sm" href="{{ path('app_admin_comment_show', {'id': comment.id}) }}">Détails</a>
							<a class="btn btn-info btn-sm" href="{{ path('app_admin_comment_edit', {'id': comment.id}) }}">Modifier</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4" class="no-records">Aucun enregistrement trouvé</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>


	</div>
{% endblock %}
