{% extends 'base.html.twig' %}

{% block title %}Détails du commentaire
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4">Détails du commentaire</h1>

		<div class="card mt-4">
			<div class="card-body">
				<table class="table table-bordered">
					<tbody>
						<tr>
							<th>Nom</th>
							<td>{{ comment.user }}</td>
						</tr>
						<tr>
							<th>Description</th>
							<td>{{ comment.content }}</td>
						</tr>
						<tr>
							<th>Produit</th>
							<td>{{ comment.product }}</td>
						</tr>
						<tr>
							<th>Son</th>
							<td>{{ comment.son }}</td>
						</tr>
					</tbody>
				</table>
				<a href="{{ path('app_admin_comment_edit', {'id': comment.id}) }}" class="btn btn-success">Modifier</a>
			</div>
		</div>
		<a href="{{ path('app_admin_comment_index') }}" class="btn btn-primary my-3">Retour à la liste</a>

		{{ include('admin_comment/_delete_form.html.twig') }}
	</div>
{% endblock %}
