{% extends 'base.html.twig' %}

{% block title %}Nouveau commentaire
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-8 offset-md-2">
				<div class="card mt-4">
					<div class="card-header">
						<h1 class="text-center">Créer un nouveau commentaire</h1>
					</div>
					<div class="card-body">

						{{ form_start(form) }}

						<div class="form-group">
							{{ form_label(form.content, 'Contenu :') }}
							{{ form_widget(form.content) }}
						</div>
						<div class="form-group">
							{{ form_label(form.son, 'Son :') }}
							{{ form_widget(form.son) }}
						</div>
						<div class="form-group">
							{{ form_label(form.product, 'Produit :') }}
							{{ form_widget(form.product) }}
						</div>
						<div class="form-group">
							{{ form_label(form.user, 'Utilisateur :') }}
							{{ form_widget(form.user) }}
						</div>

						<button type="submit" class="btn btn-success mt-3">Crée</button>

						{{ form_end(form) }}

					</div>
				</div>
				<a class="btn btn-info mt-3" href="{{ path('app_admin_comment_index') }}">Retour à la liste</a>
			</div>
		</div>
	</div>
{% endblock %}
