{% extends 'base.html.twig' %}

{% block title %}
	Modifier le commentaire
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4 text-dark">
			Modifier le commentaire
		</h1>

		<div class="card mt-4">
			<div class="card-body">
				{{ form_start(form) }}

				<div class="form-group">
					{{ form_label(form.content, 'Contenu :') }}
					{{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.son, 'Son :') }}
					{{ form_widget(form.son, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.product, 'Produit :') }}
					{{ form_widget(form.product, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.user, 'Utilisateur :') }}
					{{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
				</div>

				<div class="mt-3">
					<button type="submit" class="btn btn-success">Mettre à jour</button>
				</div>

				{{ form_end(form) }}

			</div>
		</div>
	</div>
	<a href="{{ path('app_admin_comment_index') }}" class="btn btn-info mt-3 text-dark">
		Retour à la liste
	</a>

	<div class="mt-3">
		{{ include('admin_comment/_delete_form.html.twig') }}
	</div>
{% endblock %}
