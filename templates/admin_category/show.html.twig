{% extends 'base.html.twig' %}

{% block title %}Détails de la catégorie
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4">Détails de la catégorie</h1>

		<div class="card mt-4">
			<div class="card-body">
				<table class="table table-bordered">
					<tbody>
						<tr>
							<th>Nom</th>
							<td>{{ category.name }}</td>
						</tr>
						<tr>
							<th>Description</th>
							<td>{{ category.description }}</td>
						</tr>
						<tr>
							<th>Image</th>
							<td>
								{% if category.picture %}
									<img src="{{ asset('uploads/images/products/' ~ category.picture) }}" alt="{{ category.name }}" width="200">
								{% else %}
									Aucune image disponible
								{% endif %}
							</td>
						</tr>
					</tbody>
				</table>


				<a href="{{ path('app_admin_category_edit', {'id': category.id}) }}" class="btn btn-success">Modifier</a>
			</div>
		</div>
		<a href="{{ path('app_admin_category_index') }}" class="btn btn-primary my-3">Retour à la liste</a>
		{{ include('admin_category/_delete_form.html.twig') }}
	</div>
{% endblock %}
