{% extends 'base.html.twig' %}

{% block title %}
	Modifier la catégorie
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4 text-dark">
			Modifier
			{{category.name}}
		</h1>

		<div class="card mt-4">
			<div class="card-body">
				{{ form_start(form) }}
				<div class="form-group">
					{{ form_label(form.name, 'Nom :') }}
					{{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.description, 'Description :') }}
					{{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
				</div>
				<div class="form-group">
					{{ form_label(form.picture, 'Image :') }}
					{{ form_widget(form.picture, {'attr': {'class': 'form-control'}}) }}
				</div>
				<button type="submit" class="btn btn-success mt-3">Mettre a jour</button>
				{{ form_end(form) }}

			</div>
		</div>
	</div>
	<a href="{{ path('app_admin_category_index') }}" class="btn btn-info mt-3 text-dark">
		Retour à la liste
	</a>

	<div class="mt-3">
		{{ include('admin_category/_delete_form.html.twig') }}
	</div>
{% endblock %}
